---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'El Impostor – Juego Social',
  description = 'Juego social de detección del impostor para jugar con amigos. 100% offline, un solo dispositivo.',
} = Astro.props;
---

<!doctype html>
<html lang="es" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover, maximum-scale=1, user-scalable=no" />

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#6366F1" />

    <!-- PWA -->
    <link rel="manifest" href="/manifest.json" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/icons/icon-192.svg" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="Impostor" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <!-- Styles -->
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="bg-gray-900 text-gray-100 antialiased font-sans overscroll-none">
    <slot />

    <!-- Register Service Worker -->
    <script is:inline>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js').catch(() => {});
        });
      }
    </script>
  </body>
</html>
